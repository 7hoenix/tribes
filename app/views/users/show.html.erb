<div class='container-fluid page-content'>
  <div class="row">
    <div class="col-md-3">
      <div class="panel-body gh-address-box">
        <div class="row">
          <div class="col-md-12 ">
            <%= image_tag(@user.banner_image, class: "img-responsive col-centered") %>
            <div class="profile-avatar">
              <%= image_tag(@user.profile_image, class: "img-responsive col-centered") %>
            </div>
            <div class="profile-text">
              <strong><%= @user.name %></strong><br>
              @<%= @user.screen_name %>
            </div>
            <div class="col-md-4">
              <span class="stat-text">TWEETS</span><br>
              <span class="stat-number"><%= @user.tweet_count %></span>
            </div>
            <div class="col-md-4">
              <span class="stat-text">FOLLOWING</span><br>
              <span class="stat-number"><%= @user.following %></span>
            </div>
            <div class="col-md-4">
              <span class="stat-text">FOLLOWERS</span><br>
              <span class="stat-number"><%= @user.followers %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="panel-body gh-main-content">
          <div class="col-md-12">
            <div class="joblist">
                <%= render partial: "/tweets/new" %>
                <br>
               <%= render partial: "/statuses/status", collection: @user.tweets %>
            </div>
          </div>
        </div>
      </div>
    <div class="col-md-3">
      <div class="panel-body">
        <h2>Recommended People to Follow</h2>
             <x%= render partial: "", collection: @jobs, locals: { type: "feed" } %>
        </br>
        </br>
        <x%= render partial: "/resumes/resume", collection: @resumes, locals: { type:
          "profile" } %>
      </div>
    </div>
  </div>
</div>

  <!-- jQuery -->
  <script src="js/jquery.js"></script>

  <!-- Bootstrap Core JavaScript -->
  <script src="js/bootstrap.min.js"></script>
